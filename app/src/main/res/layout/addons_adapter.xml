<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/colorLightBlack"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:id="@+id/addons_heading"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_layout_addons_typesPrice">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorLightBlack"
            android:layout_centerHorizontal="true"
            android:id="@+id/addons_types"
            />
        </RelativeLayout>
        //-------------------------------------
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="70dp"
               android:layout_height="30dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_centerInParent="true"
                   android:textColor="@color/colorLightBlack"
                   android:layout_marginRight="8dp"
                   android:id="@+id/addons_typesPrice"
                   />
           </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/check_addons_rel">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:id="@+id/tick_sides_img"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:src="@drawable/tick_button_green" />

        </RelativeLayout>


       </LinearLayout>
        </RelativeLayout>
        //--------------------------------------------

    </RelativeLayout>



</LinearLayout>