                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:text="Home Address:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/address_corners"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"

                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/street_Layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/imageView"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp">

                                <EditText
                                    android:id="@+id/edt_street1"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:editable="false"
                                    android:ems="10"
                                    android:focusedByDefault="false"
                                    android:hint="Street:"
                                    android:inputType="textPostalAddress"
                                    android:paddingLeft="5dp"
                                    android:textColor="#6b6b6b"
                                    android:textColorHint="#6b6b6b" />
                            </android.support.design.widget.TextInputLayout>
                            <!-- android:text="@string/street"-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Country:"
                                android:textColor="#6b6b6b"
                                android:textColorHint="#6b6b6b"
                                android:textSize="11dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txt_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />
                                <!--    android:drawableRight="@drawable/arrow"-->
                                <Spinner
                                    android:id="@+id/spinner_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"></Spinner>
                            </RelativeLayout>


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/city_Layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/imageView"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp">

                                <AutoCompleteTextView
                                    android:id="@+id/edt_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:editable="false"
                                    android:ems="10"
                                    android:focusedByDefault="false"
                                    android:hint="City:"
                                    android:inputType="textPostalAddress"
                                    android:paddingLeft="5dp"
                                    android:textColor="#6b6b6b"
                                    android:textColorHint="#6b6b6b" />
                            </android.support.design.widget.TextInputLayout>
                            <!-- android:text="@string/city"-->


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Postal Code:"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/edt_postal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="4dp"
                                android:editable="false"
                                android:ems="10"
                                android:focusedByDefault="false"
                                android:hint="Postal Code:"
                                android:inputType="textPostalAddress"
                                android:paddingLeft="5dp"
                                android:textColor="#6b6b6b"
                                android:textColorHint="#6b6b6b" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:text="Work Address:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/address_corners"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/street_Layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/imageView"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp">

                                <EditText
                                    android:id="@+id/edt_street_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:editable="false"
                                    android:ems="10"
                                    android:focusedByDefault="false"
                                    android:hint="Street:"
                                    android:inputType="textPostalAddress"
                                    android:paddingLeft="5dp"
                                    android:textColor="#6b6b6b"
                                    android:textColorHint="#6b6b6b" />
                            </android.support.design.widget.TextInputLayout>
                            <!-- android:text="@string/street_work"-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Country:"
                                android:textColor="#6b6b6b"
                                android:textColorHint="#6b6b6b"
                                android:textSize="11dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spinner_country_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"></Spinner>

                                <TextView
                                    android:id="@+id/txt_spinner_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />
                                <!-- android:drawableRight="@drawable/arrow"-->
                            </RelativeLayout>


                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/cit_Layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/imageView"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp"
                                tools:ignore="DuplicateIds">

                                <AutoCompleteTextView
                                    android:id="@+id/edit_city_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:editable="false"
                                    android:ems="10"
                                    android:focusedByDefault="false"
                                    android:hint="City:"
                                    android:inputType="textPostalAddress"
                                    android:paddingLeft="5dp"
                                    android:textColor="#6b6b6b"
                                    android:textColorHint="#6b6b6b" />
                            </android.support.design.widget.TextInputLayout>
                            <!--  android:text="@string/city_work"-->


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Postal Code:"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/edit_postal_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="4dp"
                                android:editable="false"
                                android:ems="10"
                                android:focusedByDefault="false"
                                android:hint="Postal Code:"
                                android:inputType="textPostalAddress"
                                android:paddingLeft="5dp"
                                android:textColor="#6b6b6b"
